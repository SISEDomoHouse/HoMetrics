<h1>Elementos en cuartos</h1>

  <div class="center">
    <h2>Cuartos</h2>
    <table>
      <tbody>
        <% @rooms.each do |room| %>
          <tr>
            <td><%= room.name %></td>
            <td>Sensores</td>
            <% room.sensors.each do |sensor| %>
              <tr>
                <td><%= sensor.name %></td>
              </tr>
            <% end %>
            <td>Actuadores</td>
            <% room.actuators.each do |actuator| %>
              <tr>
                <td><%= actuator.name %></td>
              </tr>
            <% end %>
         </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to 'New Room', new_room_path %>
  </div>
  <br>
  <div class="center">
    <h2>Miembros</h2>
    <table>
      <tbody>
        <% @users.each do |room| %>
          <tr>
            <td><%= room.name %></td>
         </tr>
        <% end %>
      </tbody>
    </table>
